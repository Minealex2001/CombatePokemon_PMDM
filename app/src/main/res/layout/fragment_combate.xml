<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:orientation="vertical"
    tools:context=".Combate">

    <ScrollView
        android:id="@+id/linearScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/combatir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/primerPokemon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pokemon 1"
                android:textSize="40dp" />


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/combatiendo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginStart="80dp"
                    android:text="COMBATIENDO"
                    android:textSize="35dp"
                    android:textStyle="bold" />
            </TableRow>

            <TextView
                android:id="@+id/segundoPokemon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pokemon 2"
                android:textSize="40dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/combatir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Combatir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>